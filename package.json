{
  "name": "eventuras",
  "version": "0.1.1",
  "private": true,
  "license": "GPL-2.0+",
  "workspaces": [
    "apps/api",
    "apps/docsite",
    "apps/historia",
    "apps/idem-idp",
    "apps/web",
    "apps/web-e2e",
    "apps/convertoapi",
    "docs",
    "libs/**",
    "lab/**"
  ],
  "scripts": {
    "build": "turbo run build --concurrency 30",
    "build:dev": "turbo run build --filter=@eventuras/web... --concurrency 20",
    "changeset": "changeset",
    "changeset:release": "changeset publish",
    "changeset:suggest": "tsx scripts/changeset-suggest.ts --since origin/main --write",
    "changeset:version": "changeset version",
    "clean": "pnpm clean:build && pnpm clean:deps",
    "clean:build": "npx rimraf \"**/{.next,.turbo,.vercel,dist,build,storybook-static}\" \"!**/node_modules/**\"",
    "clean:deps": "pnpm -r exec rm -rf node_modules && rm -rf node_modules pnpm-lock.yaml",
    "deps:check": "pnpm dlx npm-check-updates --deep",
    "deps:clean": "pnpm -r exec rm -rf node_modules && rm -rf node_modules pnpm-lock.yaml",
    "deps:reinstall": "pnpm run clean && pnpm run deps:sort && pnpm install",
    "deps:sort": "pnpm dlx sort-package-json '**/package.json' '!**/node_modules/**'",
    "deps:update": "pnpm dlx npm-check-updates --deep -u",
    "dev": "turbo dev --concurrency 20",
    "dev:web": "turbo dev --filter=@eventuras/web... --concurrency 20",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:staged": "pnpm dlx lint-staged",
    "next:clean": "npx rimraf \"**/{.next,.turbo,.vercel}\"",
    "openapi:update": "cd apps/api && pnpm openapi:update && cd ../.. && cd libs/event-sdk && pnpm build",
    "openapi:update:prod": "cd apps/api && pnpm openapi:update:prod && cd ../.. && cd libs/event-sdk && pnpm build",
    "prepare": "simple-git-hooks",
    "test": "turbo run test"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint:staged",
    "commit-msg": "npx --no -- commitlint --edit $1"
  },
  "lint-staged": {
    "**/package.json": "pnpm dlx sort-package-json",
    "**/*.{jsx,ts,tsx,cjs,mjs}": "eslint --fix"
  },
  "dependencies": {
    "turbo": "^2.5.8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eventuras/eslint-config": "workspace:*",
    "@eventuras/typescript-config": "workspace:*",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.38.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=20.0.0 <23.0.0",
    "pnpm": ">=9.0.0"
  }
}
