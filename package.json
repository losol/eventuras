{
  "name": "eventuras",
  "version": "0.1.1",
  "private": true,
  "license": "GPL-2.0+",
  "workspaces": [
    "apps/api",
    "apps/docsite",
    "apps/historia",
    "apps/idem-idp",
    "apps/web",
    "apps/web-e2e",
    "apps/convertoapi",
    "docs",
    "libs/**",
    "lab/**"
  ],
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "changeset:release": "changeset publish",
    "changeset:suggest": "tsx scripts/changeset-suggest.ts --since origin/main --write",
    "changeset:version": "changeset version",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "next:clean": "rimraf \"**/{.next,.turbo,.vercel}\"",
    "npm:check-update": "npx npm-check-updates --deep",
    "npm:clean": "npm exec --workspaces -- npx rimraf node_modules && npx rimraf node_modules && npx rimraf package-lock.json",
    "npm:reinstall": "npm run npm:clean && npm run npm:sort && npm install",
    "npm:sort": "npx sort-package-json '**/package.json' '!**/node_modules/**'",
    "npm:update": "npx npm-check-updates --deep -u",
    "test": "turbo run test"
  },
  "dependencies": {
    "turbo": "^2.5.8"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eventuras/eslint-config": "*",
    "@eventuras/typescript-config": "*",
    "@types/node": "^24.7.2",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "npm@11.6.2",
  "engines": {
    "node": ">=20.0.0 <23.0.0",
    "npm": ">=10.0.0 <11.0.0"
  }
}
