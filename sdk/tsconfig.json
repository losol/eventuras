{
  "compilerOptions": {
    "sourceRoot": "./src",
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES2016",
    "allowJs": true,
    "moduleResolution": "node",
  },
  "include": [
    "./src/**/*"
  ],
    "ts-node": {
    "swc": true
  }
}
