{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "esnext",
      "dom",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "dist",
    "declarationMap": true
  },
  "include": [
    "src",
    "src/index.tsx"
  ],
}