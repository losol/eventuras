{
  "name": "@eventuras/app-config",
  "version": "0.1.0",
  "description": "Declarative environment configuration for Eventuras applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": "./schema/app-config.schema.json"
  },
  "files": [
    "dist",
    "schema"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eventuras/eslint-config": "workspace:*",
    "@eventuras/typescript-config": "workspace:*",
    "@eventuras/vite-config": "workspace:*",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "vite": "^7.1.10"
  },
  "keywords": [
    "eventuras",
    "config",
    "environment",
    "validation"
  ],
  "license": "MIT"
}
