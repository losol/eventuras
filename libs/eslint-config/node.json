{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "only-warn", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "eslint-config-turbo",
    "plugin:prettier/recommended"
  ],
  "env": {
    "node": true
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "ignorePatterns": [
    ".*.js",
    "node_modules/",
    "dist/"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"]
    }
  ],
  "rules": {
    "turbo/no-undeclared-env-vars": "off"
  }
}
