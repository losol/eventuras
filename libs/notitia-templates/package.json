{
  "name": "@eventuras/notitia-templates",
  "version": "0.1.0",
  "description": "Handlebars-based library for generating SMS and email texts with support for default templates and custom overrides",
  "keywords": [
    "templates",
    "handlebars",
    "email",
    "sms",
    "notifications",
    "eventuras"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/losol/eventuras.git",
    "directory": "libs/notitia-templates"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run clean && NODE_OPTIONS=\"--import tsx\" vite build",
    "clean": "rm -rf dist",
    "dev": "NODE_OPTIONS=\"--import tsx\" vite build --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@eventuras/typescript-config": "workspace:*",
    "@eventuras/vite-config": "workspace:*",
    "@types/handlebars": "^4.1.0",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "vite": "7.2.6",
    "vitest": "4.0.15"
  },
  "engines": {
    "node": ">=18"
  }
}
