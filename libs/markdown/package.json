{
  "name": "@eventuras/markdown",
  "version": "5.0.0",
  "description": "Markdown renderer for React using markdown-to-jsx and Eventuras Ratio UI components.",
  "keywords": [
    "markdown",
    "eventuras"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/losol/eventuras.git",
    "directory": "libs/markdown"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/markdown.es.js"
    }
  },
  "main": "src/index.tsx",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && vite build",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run test && npm run typecheck && npm run build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "typecheck": "tsc -p tsconfig.build.json --noEmit"
  },
  "devDependencies": {
    "@eventuras/ratio-ui": "*",
    "@eventuras/typescript-config": "*",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "^16.3.0",
    "jsdom": "27.0.0",
    "markdown-to-jsx": "7.7.15",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "vite": "7.1.10",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "@eventuras/ratio-ui": ">=0.6.0",
    "markdown-to-jsx": "^7",
    "react": ">=18 <20",
    "react-dom": ">=18 <20"
  },
  "peerDependenciesMeta": {
    "@eventuras/ratio-ui": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  }
}
