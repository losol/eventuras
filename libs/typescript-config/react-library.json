{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM"],
    "types": ["react", "react-dom"],
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ]
}
