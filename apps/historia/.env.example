# This file is an example of a .env file for the historia app.

# Set up your database
CMS_DATABASE_URL=postgres://127.0.0.1:5432/cms

CMS_ALLOWED_ORIGINS=http://localhost:3100

# Make your secret with `openssl rand -hex 64`
CMS_SECRET=SECRET_HERE

# Used to configure CORS, format links and more. No trailing slash
# Must be HTTPS for Vipps - use Cloudflare tunnel for local dev:
# cloudflared tunnel --url http://localhost:3100
NEXT_PUBLIC_CMS_URL=http://localhost:3000

# Set up localisation
NEXT_PUBLIC_CMS_LOCALES=nb,en
NEXT_PUBLIC_CMS_DEFAULT_LOCALE=nb

PREVIEW_SECRET=your-preview-secret-here

# Push database changes automatically in development
HISTORIA_DB_DEV_PUSH=true

# VIPPS PAYMENT CONFIGURATION
VIPPS_API_URL=URL
VIPPS_MERCHANT_SERIAL_NUMBER=123
VIPPS_CLIENT_ID=123
VIPPS_CLIENT_SECRET=SECRET
VIPPS_SUBSCRIPTION_KEY=123
VIPPS_SUBSCRIPTION_KEY_SECONDARY=123
VIPPS_CALLBACK_TOKEN=your-secret-callback-token-here

# Set up S3 for media storage
CMS_MEDIA_S3_ACCESS_KEY_ID=ACCESS_KEY_ID_HERE
CMS_MEDIA_S3_ENDPOINT=ENDPOINT_HERE
CMS_MEDIA_S3_SECRET_ACCESS_KEY=SECRET
CMS_MEDIA_S3_REGION=REGION_HERE
CMS_MEDIA_S3_BUCKET=BUCKET_HERE

# Email Configuration (SMTP)
# Set FEATURE_SMTP=enabled to send real emails, otherwise emails are logged to console
FEATURE_SMTP=disabled
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
SMTP_FROM_EMAIL=noreply@eventuras.com
SMTP_FROM_NAME=Historia

# Sentry Error Tracking
# Set FEATURE_SENTRY=true to enable Sentry error tracking, false to disable
FEATURE_SENTRY=false
# Get these from your Sentry project settings
# NEXT_PUBLIC_* vars must be set at build time for Docker/production
NEXT_PUBLIC_CMS_SENTRY_DSN=https://your-key@o123456.ingest.sentry.io/123456
CMS_SENTRY_DSN=https://your-key@o123456.ingest.sentry.io/123456
CMS_SENTRY_ORG=your-org
CMS_SENTRY_PROJECT=your-project
CMS_SENTRY_AUTH_TOKEN=your-auth-token
NEXT_PUBLIC_CMS_SENTRY_SEND_DEFAULT_PII=false
