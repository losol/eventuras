{
  "$schema": "https://eventuras.dev/schema/app-config.schema.json",
  "name": "@eventuras/historia",
  "type": "app",
  "description": "Historia CMS and Commerce platform",
  "env": {
    "CMS_DATABASE_URL": {
      "required": true,
      "client": false,
      "type": "string",
      "description": "PostgreSQL database connection URL"
    },
    "CMS_SECRET": {
      "required": true,
      "client": false,
      "type": "string",
      "description": "Secret for CMS encryption and signing"
    },
    "NEXT_PUBLIC_CMS_URL": {
      "required": true,
      "client": true,
      "type": "url",
      "description": "Public URL for the CMS (used for CORS, links, callbacks - must be HTTPS for Vipps)"
    },
    "NEXT_PUBLIC_CMS_LOCALES": {
      "required": false,
      "client": true,
      "type": "string",
      "description": "Comma-separated list of supported locales",
      "default": "no,en"
    },
    "NEXT_PUBLIC_CMS_DEFAULT_LOCALE": {
      "required": false,
      "client": true,
      "type": "string",
      "description": "Default locale for the CMS",
      "default": "no"
    },
    "PREVIEW_SECRET": {
      "required": false,
      "client": false,
      "type": "string",
      "description": "Secret for live preview functionality"
    },
    "VIPPS_API_URL": {
      "required": false,
      "client": false,
      "type": "url",
      "description": "Vipps API base URL",
      "default": "https://apitest.vipps.no"
    },
    "VIPPS_MERCHANT_SERIAL_NUMBER": {
      "required": false,
      "client": false,
      "type": "string",
      "description": "Vipps merchant serial number"
    },
    "VIPPS_CLIENT_ID": {
      "required": false,
      "client": false,
      "type": "string",
      "description": "Vipps client ID for authentication"
    },
    "VIPPS_CLIENT_SECRET": {
      "required": false,
      "client": false,
      "type": "string",
      "description": "Vipps client secret for authentication"
    },
    "VIPPS_SUBSCRIPTION_KEY": {
      "required": false,
      "client": false,
      "type": "string",
      "description": "Vipps API subscription key (primary)"
    },
    "VIPPS_SUBSCRIPTION_KEY_SECONDARY": {
      "required": false,
      "client": false,
      "type": "string",
      "description": "Vipps API subscription key (secondary/backup)"
    },
    "VIPPS_CALLBACK_TOKEN": {
      "required": false,
      "client": false,
      "type": "string",
      "description": "Secret token for validating Vipps callbacks"
    },
    "FEATURE_SENTRY": {
      "required": false,
      "client": false,
      "type": "bool",
      "description": "Enable Sentry error tracking",
      "default": "false"
    },
    "CMS_SENTRY_ORG": {
      "required": false,
      "client": false,
      "type": "string",
      "description": "Sentry organization slug"
    },
    "CMS_SENTRY_PROJECT": {
      "required": false,
      "client": false,
      "type": "string",
      "description": "Sentry project slug"
    },
    "NEXT_PUBLIC_CMS_SENTRY_DSN": {
      "required": false,
      "client": true,
      "type": "string",
      "description": "Sentry DSN for error tracking"
    },
    "NEXT_PUBLIC_CMS_SENTRY_SEND_DEFAULT_PII": {
      "required": false,
      "client": true,
      "type": "bool",
      "description": "Enable sending user PII to Sentry",
      "default": "true"
    }
  }
}
