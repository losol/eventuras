{
  "name": "@eventuras/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "ANALYZE=true next build",
    "build": "next build",
    "dev": "next dev",
    "fix-all": "npm run lint-fix && npm run prettier-fix",
    "lint": "next lint",
    "lint-fix": "eslint --fix --ext .ts,.tsx .",
    "prettier-fix": "prettier . --write",
    "start": "next start",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "create-random-event": "NODE_ENV=development npx ts-node ./scripts/api/createEvents.ts --ignore=false",
    "test:playwright": "playwright test --workers=1",
    "test:playwright:skiplogin": "playwright test --project=skip-login --workers=1",
    "test:playwright:ui": "playwright test --ui",
    "chromatic": "npx chromatic --project-token chpt_39f4ebd3d21130e"
  },
  "lint-staged": {
    "**/*.(ts|tsx|js)": [
      "eslint --fix",
      "prettier --cache --write"
    ],
    "*.{css,json}": "prettier --cache --write"
  },
  "browserslist": [
    "defaults, not dead"
  ],
  "readme": "README.md"
}
