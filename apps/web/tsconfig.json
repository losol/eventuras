{
  "extends": "@eventuras/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*", "./public/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ],

  },
  "include": [
    "i18n.js",
    "tailwind.config.js",
    "postcss.config.js",
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
