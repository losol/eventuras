{
  "extends": "@eventuras/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*", "./public/*"],
      "@eventuras/datatable":["../../libs/datatable/src/*"],
      "@eventuras/forms*":["../../libs/forms/src*"],
      "@eventuras/scribo":["../../libs/scribo"],
      "@eventuras/smartform":["../../libs/smartform/src/*"],
      "@eventuras/sdk":["../../libs/sdk"],
      "@eventuras/ui":["../../libs/ui/src"],
      "@eventuras/ui/*":["../../libs/ui/src/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ],

  },
  "include": [
    "i18n.js",
    "tailwind.config.js",
    "postcss.config.js",
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
