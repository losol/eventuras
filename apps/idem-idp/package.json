{
  "name": "@eventuras/idem-idp",
  "version": "0.6.0",
  "description": "Eventuras identity provider",
  "license": "GPL-3.0-or-later",
  "author": "Eventuras team",
  "type": "module",
  "main": "./dist/main.js",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "pnpm build:ui && pnpm build:backend",
    "build:backend": "tsup",
    "build:ui": "vite build",
    "db:check": "tsx --env-file=.env src/scripts/check-oidc-store.ts",
    "db:cleanup": "tsx --env-file=.env src/scripts/cleanup-oidc-store.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "dev": "tsx watch --env-file=.env src/main.ts",
    "dev:ui:watch": "vite build --watch",
    "start": "node --enable-source-maps dist/main.js",
    "test": "sh -c 'export $(cat .env | xargs) && vitest run'",
    "test:coverage": "sh -c 'export $(cat .env | xargs) && vitest run --coverage'",
    "test:ui": "sh -c 'export $(cat .env | xargs) && vitest --ui'",
    "test:watch": "sh -c 'export $(cat .env | xargs) && vitest'",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@eventuras/fides-auth": "workspace:*",
    "@eventuras/logger": "workspace:*",
    "@eventuras/mailer": "workspace:*",
    "@eventuras/notitia-templates": "workspace:*",
    "@eventuras/ratio-ui": "workspace:*",
    "@fastify/cookie": "^11.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/middie": "^9.1.0",
    "@fastify/session": "^11.1.1",
    "@fastify/static": "^9.0.0",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.2",
    "i18next": "^25.8.0",
    "jose": "^6.1.3",
    "oidc-provider": "^9.6.0",
    "postgres": "^3.4.8",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-i18next": "^16.5.4",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@eventuras/eslint-config": "workspace:*",
    "@eventuras/typescript-config": "workspace:*",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.18",
    "drizzle-kit": "^0.31.8",
    "tsup": "8.5.1",
    "tsx": "^4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-arm64-gnu": "4.57.1",
    "@rollup/rollup-linux-arm64-musl": "4.57.1",
    "@rollup/rollup-linux-x64-gnu": "4.57.1"
  },
  "engines": {
    "node": ">=22.0.0 <25.0.0"
  }
}
