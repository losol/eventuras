{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@eventuras/datatable": ["../../libs/datatable/src/"],
      "@eventuras/datatable/*": ["../../libs/datatable/src/*"],
      "@eventuras/forms": ["../../libs/forms/src/"],
      "@eventuras/forms/*": ["../../libs/forms/src/*"],
      "@eventuras/ratio-ui": ["../../libs/ratio-ui/src/"],
      "@eventuras/ratio-ui/*": ["../../libs/ratio-ui/src/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
