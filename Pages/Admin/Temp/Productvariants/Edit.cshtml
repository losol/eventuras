@page
@model losol.EventManagement.Pages.Admin.Temp.Productvariants.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>ProductVariant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductVariant.ProductVariantId" />
            <div class="form-group">
                <label asp-for="ProductVariant.Name" class="control-label"></label>
                <input asp-for="ProductVariant.Name" class="form-control" />
                <span asp-validation-for="ProductVariant.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductVariant.Price" class="control-label"></label>
                <input asp-for="ProductVariant.Price" class="form-control" />
                <span asp-validation-for="ProductVariant.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductVariant.VatPercent" class="control-label"></label>
                <input asp-for="ProductVariant.VatPercent" class="form-control" />
                <span asp-validation-for="ProductVariant.VatPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ProductVariant.AdminOnly" /> @Html.DisplayNameFor(model => model.AdminOnly)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ProductVariant.ProductId" class="control-label"></label>
                <select asp-for="ProductVariant.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ProductVariant.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
