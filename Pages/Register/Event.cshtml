@page "{id:int}"
@model losol.EventManagement.Pages.Register.EventRegistrationModel
@{
    ViewData["Title"] = "CourseRegistration";
    
    Layout = "~/Pages/_Layout.cshtml";
}
<div class="container">
<h2>@Model.Registration.EventInfoTitle <br><small> - Course Registration</small></h2>
<p>@Model.Registration.EventInfoDescription</p>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Registration.Name"></label>
                <input asp-for="Registration.Name" class="form-control" />
                <span asp-validation-for="Registration.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.Email"></label>
                <input asp-for="Registration.Email" class="form-control" />
                <span asp-validation-for="Registration.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.Phone"></label>
                <input asp-for="Registration.Phone" class="form-control" />
                <span asp-validation-for="Registration.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.Employer"></label>
                <input asp-for="Registration.Employer" class="form-control" />
                <span asp-validation-for="Registration.Employer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.VatNumber"></label>
                <input asp-for="Registration.VatNumber" class="form-control" />
                <span asp-validation-for="Registration.VatNumber" class="text-danger"></span>
            </div>
            <div class="form-group"><!-- Payment method -->
                <label asp-for="Registration.PaymentMethod"></label>
                <select asp-for="Registration.PaymentMethod" asp-items="Html.GetEnumSelectList<Model.Registration.PaymentMethod>()">
                    <option value="" selected>--select--</option>  
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Registration" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

