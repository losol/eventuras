{
  "name": "NET5 & PostgreSQL",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "settings": {
    "sqltools.connections": [
      {
        "name": "Postgres database",
        "driver": "PostgreSQL",
        "previewLimit": 50,
        "server": "localhost",
        "port": 5432,
        "database": "postgres",
        "username": "postgres",
        "password": "postgres"
      }
    ]
  },
  "extensions": ["ms-dotnettools.csharp"],
  "remoteUser": "vscode",
  "forwardPorts": [3000, 3030, 5432]
}
